# clone git repo, cd to this folder, and build fasttext container with
docker build -t fasttext .

# move train.txt and test.txt to the data folder

# select action you want to do:
ACTION=train
#ACTION=test
#ACTION=predict

# run fasttext docker with the selected action:
docker run --rm \
    -v $PWD/scripts:/scripts \
    -v $PWD/data:/data \
    -v $PWD/result:/result \
    -it fasttext ./scripts/${ACTION}.sh